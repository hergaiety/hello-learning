<%= form_with(model: [ @article, @article.comments.build ], local: true) do |form| %>
  <p>
    <%= form.label :commenter %>
    <%= form.text_field :commenter %>
  </p>
  <p>
    <%= form.label :body %>
    <%= form.text_area :body, :class => 'u-full-width' %>
  </p>
  <p>
    <%= form.submit 'Submit Comment', :class => 'button-primary' %>
  </p>
<% end %>

